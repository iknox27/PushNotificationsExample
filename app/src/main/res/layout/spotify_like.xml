<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_media_previous"
            android:layout_alignLeft="@+id/ic_media_play"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_previous"
            android:layout_alignStart="@+id/ic_media_play" />

        <ImageView
            android:id="@+id/ic_media_play"
            android:layout_centerInParent="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_play"/>


        <ImageView
            android:layout_alignRight="@+id/ic_media_play"
            android:id="@+id/ic_media_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_next"
            android:layout_alignEnd="@+id/ic_media_play" />


    </RelativeLayout>


</LinearLayout>